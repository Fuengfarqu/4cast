<%= form_with model: @user, url: sign_up_path do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>



  <div class="sign-up-box shadow-lg p-5 mb-5 bg-white rounded">
    <h2 class="mb-3">Welcome to 4CAST</h2>

    <div class="mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", placeholder: "Steve@apple.com" %>
    </div>

    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "The password must contain at least six character" %>
    </div>

    <div class="mb-3">
      <%= form.label :Confirm_password %>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "The password must contain at least six character" %>
    </div>

    <div class="signup-botton mb-3">
      <%= form.submit "Sign up", class: "btn btn-primary" %>
    </div>

    <div class="have-an-account">
    <p class="text-inverse text-center">Already have an account? <a href="sign_in" data-abc="true">Sign in</a></p>
    
    </div>


  </div>
  

<% end %>

