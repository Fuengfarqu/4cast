<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Frequency distributions</h1>
    <%= link_to 'New frequency distribution', new_frequency_distribution_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="frequency_distributions" class="min-w-full">
    <%= render @frequency_distributions %>
  </div>

  <span class="btn btn-large btn-blue btn-file">
    <%= form_tag import_items_path, multipart: true do %>
      <label for="file">File to Upload</label>
      <%= file_field_tag :file %>
      <%= submit_tag "Upload" %>
    <% end %>
  </span>

</div>
