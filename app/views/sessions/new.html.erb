<%= form_with url: sign_in_path do |form| %>
  <div class="sign-up-box shadow-lg p-5 mb-5 bg-white rounded">
    <h2 class="mb-3">Sign in to 4CAST</h2>

    <div class="mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", placeholder: "Steve@apple.com" %>
    </div>

    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="signup-botton">
      <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
      </div>
    </div>
  </div>

<% end %>